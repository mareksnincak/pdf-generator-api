{
  "name": "pdf-generator-api",
  "description": "API to generate dynamic PDF documents",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "synth": "cd ./infra/cdk && cdk synth",
    "presynth": "shx rm -rf ./infra/cdk/cdk.out",
    "start": "npm run synth && sam local start-api -t ./infra/cdk/cdk.out/pdf-generator-api.template.json",
    "start:watch": "concurrently --kill-others \"chokidar 'src/**' -c 'npm run synth'\" \"npm run start\"",
    "start:debug": "concurrently --kill-others \"chokidar 'src/**' -c 'npm run synth'\" \"npm run start -- -d 9229\"",
    "invoke": "npm run synth && sam local invoke -t ./infra/cdk/cdk.out/pdf-generator-api.template.json",
    "invoke:debug": "npm run invoke -- -d 9229",
    "lint": "eslint --config ./.eslintrc.json --ext .js,.ts .",
    "deploy": "npm run synth && cd ./infra/cdk && cdk deploy",
    "infra:up": "cd ./infra/local && docker compose up -d && npx ts-node init-db.script.ts",
    "infra:down": "cd ./infra/local && docker compose down"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.474.0",
    "@aws-sdk/util-dynamodb": "^3.474.0",
    "axios": "^1.6.2",
    "pino": "^8.17.1",
    "pino-lambda": "^4.4.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "aws-cdk": "^2.115.0",
    "aws-cdk-lib": "^2.115.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "constructs": "^10.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "utility-types": "^3.11.0"
  }
}
